import time

class TrafficLight:
    #color = [red, yelow, green] не встроил атрибут в код, работа светофора бесконечный цикл
    def running ():
        while True:
            print ('Горит красный')
            time.sleep(7)
            print ('Горит желтый')
            time.sleep (2)
            print ('Горит зеленый')
            time.sleep (5)
            continue
work = TrafficLight
work.running()
